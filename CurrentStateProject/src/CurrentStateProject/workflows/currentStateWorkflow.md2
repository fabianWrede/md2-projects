package CurrentStateProject.workflows

/*
 * Implement the workflow here
 */
 
 WorkflowElement LocationDetection
	fires LocationEvent {
		start Mediacapturing
	}
	fires WithoutPhotoEvent{
		start SubmitComplaint
	}
	
WorkflowElement Mediacapturing
	fires MediacapturedEvent {
		start SubmitComplaint
	}
	
WorkflowElement SubmitComplaint
	fires SubmitEvent {
		start ReviewComplaint
	}

WorkflowElement ReviewComplaint
	fires ReviewEvent {
		start ReceiveFeedback // how do we end the workflow here?
	}
	
WorkflowElement ReceiveFeedback
	fires EndOfProcessEvent {
		start LocationDetection
	}


App CurrentStateApp {
	WorkflowElements {
		LocationDetection (startable: "Start Controller 1"),
		Mediacapturing,
		SubmitComplaint
	}
	appName "currentStateApp"
}


App AdminApp {
	WorkflowElements {
		ReviewComplaint //(startable: "Review Complaint")
	}
	appName "adminApp"
}


