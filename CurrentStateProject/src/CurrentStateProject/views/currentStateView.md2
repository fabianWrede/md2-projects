FlowLayoutPane UpdateComplaint (vertical) {
	Label TitleLbl ("Update Complaint")
	
	TextInput Feedback {
		label "Add Feedback"
		type textarea
	}
	
	OptionInput Status {
		label "Status"
		options ComplaintStatus
	}
	
	Button SendFeedback {text "Send Feedback"}
}

