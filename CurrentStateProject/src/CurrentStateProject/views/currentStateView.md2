package CurrentStateProject.views

FlowLayoutPane LocationDetectionView (vertical) {
	Label TitleLbl ("Enter your location") // better: As Title of Activity
	Spacer
	
	GridLayoutPane AddressData (columns 2){
		TextInput streetLbl { label "Street: " tooltip "street"}
		TextInput streetNoLbl { label "Street Number:" tooltip "no"}

		IntegerInput zipLbl {label "ZipCode:" tooltip "zip" }
		TextInput cityLbl {label "City:" tooltip "city"}
	}
	
	TextInput countryLbl {label "country: " tooltip "country" width 100%}
	Spacer
	
	GridLayoutPane LocationOutput (columns 2){
		Label latitudeLbl ("Latitude:")
		NumberInput latitudeValueLbl
		Label longitudeLbl ("Longitude:")
		NumberInput longitudeValueLbl
	}
	
	GridLayoutPane Navbar (columns 3){
		Spacer
		Button DetectLocationBtn {text "My Location"}
		Spacer
		Spacer Spacer Spacer
		Spacer
		Button Cancel {text "Cancel"}
		Button Next {text "Next"}
	}
	//NavigationBar(Cancel, next)
}

FlowLayoutPane LocationVerifyView (vertical) {
	Label TitleLbl ("Verify Location") // better: As Title of Activity
	
	FlowLayoutPane StreetView (horizontal) {
		LocationDetectionView.AddressData.streetLbl -> streetLbl2
		LocationDetectionView.AddressData.streetNoLbl -> streetNoLbl2
	}
	FlowLayoutPane CityView (horizontal) {
		LocationDetectionView.AddressData.zipLbl -> zipLbl2
		LocationDetectionView.AddressData.cityLbl -> cityLbl2
	}
	
	LocationDetectionView.countryLbl -> countryLbl2
	Spacer {width 1%}
	LocationDetectionView.LocationOutput.latitudeValueLbl -> latitudeLbl2
	LocationDetectionView.LocationOutput.longitudeValueLbl -> longitudeLbl2
	
	//NavigationBar(Cancel, previous, next)
	
	FlowLayoutPane Buttons (horizontal) {
	Button Previous {text "Previous"}
	LocationDetectionView.Navbar.Cancel -> Cancel2
	Button Next2 {text "Next"}
	}
}

FlowLayoutPane MediaCapturingView (vertical) {
	Label TitleLbl ("Upload Photo") // better: As Title of Activity
	Button UploadBtn {
		text "Upload File"
	}
	Image UploadImg {
		src "defaultImage.png"
	}
	
	Button Next {text "Submit Media"}
	//NavigationBar(Cancel, next)
}

FlowLayoutPane SubmitComplaintView (vertical) {
	Label TitleLbl ("Submit Complaint") // better: As Title of Activity
	Image UploadImg {
		src "uploadedImage.png"
	}
	FlowLayoutPane StreetView (horizontal) {
		TextInput streetLbl3 {tooltip "street"}
		TextInput streetNoLbl3 {tooltip "no"}
	}
	FlowLayoutPane CityView (horizontal) {
		IntegerInput zipLbl3 {tooltip "zip" }
		TextInput cityLbl3 {tooltip "city"}
	}
	
	TextInput countryLbl3 {tooltip "country" width 100%}
	Spacer {width 1%}
	Label latitudeLbl3 ("Latitude:")
	Label latitudeValueLbl3 ("")
	Label longitudeLbl3 ("Longitude:")
	Label longitudeValueLbl3 ("")
	
	TextInput DescriptionTxt {
		label "Additional Description"
		type textarea
	}
	//NavigationBar(Cancel, next "Submit complaint")
	Button Cancel3 {text "Cancel"}
	Button submitComplaint {text "Submit complaint"}
}

FlowLayoutPane ViewComplaint (vertical) {
	Label TitleLbl ("View Complaint") // better: As Title of Activity
	
	FlowLayoutPane StreetView (horizontal) {
		TextInput streetLbl4 {tooltip "street"}
		TextInput streetNoLbl4 {tooltip "no"}
	}
	FlowLayoutPane CityView (horizontal) {
		IntegerInput zipLbl4 {tooltip "zip" }
